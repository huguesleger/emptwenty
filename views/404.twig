{% extends "base.twig" %}

{% block content %}
	<div class="page-404">
		<div class="wrap-error">
			404
		</div>
		<div class="container">
			<div class="row">
				<div class="col-md-8 col-lg-6">
					<div class="error-content">
						<h2 class="mb-4 delay-4" data-anim-reveal-page="slide-up"><span class="error-oops">Oops !</span>{% if site.language == 'en-GB' %}Page not found{% else %}Page non trouvée{% endif %}</h2>
						<p class="error-txt mb-5 delay-5" data-anim-reveal-page="slide-up">{% if site.language == 'en-GB' %}It looks like nothing was found here.<br>The page you are looking for does not exist.{% else %}On dirait que rien n'a été trouvé ici.<br>La page que vous recherchez n'existe pas.{% endif %}</p>
						<p class="delay-6" data-anim-reveal-page="slide-up"><a href="{{site.url}}" class="btn btn-secondary btn-shadow">{% if site.language == 'en-GB' %}Back to Home{% else %}Retour à l'accueil{% endif %}</a></p>
					</div>
				</div>
			</div>
		</div>
		<div class="wrapper-geometric geometric-last-error-1 delay-7" data-anim-reveal-page="slide-up">
			<div class="circle circle-sm color-yellow"></div>
		</div>
		<div class="wrapper-geometric geometric-last-error-2 delay-8" data-anim-reveal-page="slide-up">
			<div class="circle circle-md color-blue-light"></div>
		</div>
		<div class="wrapper-geometric geometric-last-error-3 anim-circle-pulse delay-9" data-anim-reveal-page="slide-up">
			<div class="circle circle-xs color-yellow"></div>
		</div>
		<div class="wrapper-geometric geometric-last-error-4 anim-circle-pulse delay-10" data-anim-reveal-page="slide-up">
			<div class="circle circle-xs color-blue-dark"></div>
		</div>
	</div>
{% endblock %}
{% block footer %}
	{{ function('wp_footer') }}
{% endblock %}